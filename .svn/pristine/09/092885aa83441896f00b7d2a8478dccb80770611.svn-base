	@Override
	public Vote getVote() throws Exception {
		List<Vote> votes = this.voteDao.getAll();
		Vote vote;
		if (votes == null || votes.size() == 0) {
			// 先在汇总信息表插入晒祝福投票记录
			vote = new Vote();
			vote.setPassCount(0);
			vote.setSignCount(0);
			vote.setLookCount(0);
			vote.setVoteTotalCount(0);
			this.addVote(vote);
		} else {
			vote = votes.get(0);
		}
		return vote;
	}


	
